
@{
    ViewBag.Title = "Login";
}

<style>
    #formLogin {
        width: 50%;
    }

    #centerDiv {
        width: 100%;
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

</style>

<div id="centerDiv">
    <h2 class="text-center">Login</h2>
    <div class="w-25 d-flex flex-column" >
        @using (Html.BeginForm())
        {

            <label for="username">Username</label>
            <input id="username" name="username" class="form-control w-100" style="margin: 0;" />


            <label for="password">Password</label>
            <input type="password" id="password" class="form-control w-100 m-0" name="password" />

            <button type="submit" id="btnLogin" class="btn btn-warning mt-3 w-100">Submit </button>
        }

    </div>
</div>

