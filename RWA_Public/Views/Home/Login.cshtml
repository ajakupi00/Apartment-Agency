@model RWA_Public.Models.UserModel
@{
    ViewBag.Title = "Login";
}

<style>
    #formLogin {
        width: 50%;
    }

    #centerDiv {
        width: 100%;
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

</style>

<div class="mt-4 w-100 d-flex justify-content-around">
    <div class="w-25">
        <h2 class="fw-bold">Login</h2>
        @using (Html.BeginForm())
        {
            <div class="mt-3 d-flex flex-column">
                <label class="form-label" for="lUsername">Username</label>
                <input id="lUsername" type="text" name="username" class="form-control mw-100" style="border-radius: 10px" />
            </div>
            <div class="mt-2">
                <label class="form-label" for="lPass">Password</label>
                <input id="lPass" type="password" name="password" class="form-control mw-100" style="border-radius: 10px" />
            </div>
            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-primary w-75" style="border-radius: 10px">Log in</button>
            </div>
        }
    </div>

    <div class="w-25 me-lg-5">
        <h2 class="fw-bold">Register</h2>
        @using (Html.BeginForm("Register", "Home"))
        {
            <div class="mt-2">
                <label class="form-label" for="rEmail">Email</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control mw-100" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="mt-2">
                <label class="form-label" for="rUsername">Username</label>
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control mw-100" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
            <div class="mt-2">
                <label class="form-label" for="rPhone">Phone number</label>
                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control mw-100" })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="mt-2">
                <label class="form-label" for="rAddress">Address</label>
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control mw-100" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
            <div class="mt-2">
                <label class="form-label" for="rPass">Password</label>
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control mw-100", placeholder = "Password", @type = "password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @type = "password" })
            </div>
            <div class="mt-2">
                <label class="form-label" for="rCPass">Confirm password</label>
                @Html.TextBoxFor(model => model.ReType, new { @class = "form-control mw-100", placeholder = "Confirm password", @type = "password" })
                @Html.ValidationMessageFor(model => model.ReType, "", new { @class = "text-danger" })
            </div>
            <div class="mt-2">
                <label class="form-label" for="rCPass">Terms and Conditions</label>
                @Html.CheckBoxFor(model => model.TermsAccepted)
                @Html.ValidationMessageFor(model => model.TermsAccepted, "", new { @class = "text-danger" })
            </div>
            <div class="mt-3 text-center">
                <button type="submit" onclick="check()" class="btn btn-success w-75" style="border-radius: 10px">Register</button>
            </div>
        }
    </div>

</div>

<script>
    function check() {
        
    }
    
    function validate() {
        var pass = document.getElementById("rPass").value;
        var cpass = document.getElementById("rCPass").value;
        if (cpass == pass) {
            document.getElementById('passMsg').style.display = 'none';
        } else {
            document.getElementById('passMsg').style.display = 'block';
        }

    }
</script>

