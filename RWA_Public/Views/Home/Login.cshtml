
@{
    ViewBag.Title = "Login";
}

<style>
    #formLogin {
        width: 50%;
    }

    #centerDiv {
        width: 100%;
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

</style>

<div class="mt-4 w-100 d-flex justify-content-around">
    <div class="w-25">
        <h2 class="fw-bold">Login</h2>
        @using (Html.BeginForm())
        {
            <div class="mt-3 d-flex flex-column">
                <label class="form-label" for="lUsername">Username</label>
                <input id="lUsername" type="text" name="username" class="form-control mw-100" style="border-radius: 10px" />
            </div>
            <div class="mt-2">
                <label class="form-label" for="lPass">Password</label>
                <input id="lPass" type="password" name="password" class="form-control mw-100" style="border-radius: 10px" />
            </div>
            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-primary w-75" style="border-radius: 10px">Log in</button>
            </div>
        }
    </div>

    <div class="w-25 me-lg-5">
        <h2 class="fw-bold">Register</h2>
        @using (Html.BeginForm("Register", "Home"))
        {
            <div class="mt-2">
                <label class="form-label" for="rEmail">Email</label>
                <input id="rEmail" name="email" type="email" class="form-control mw-100" style="border-radius: 10px" />
            </div>
            <div class="mt-2">
                <label class="form-label" for="rUsername">Username</label>
                <input id="rUsername" name="username" class="form-control mw-100" style="border-radius: 10px" placeholder="First Last" />
            </div>
            <div class="mt-2">
                <label class="form-label" for="rPhone">Phone number</label>
                <input id="rPhone" type="tel" name="pnumber" class="form-control mw-100" style="border-radius: 10px" />
            </div>
            <div class="mt-2">
                <label class="form-label" for="rAddress">Address</label>
                <input id="rAddress" name="address" class="form-control mw-100" style="border-radius: 10px" />
            </div>
            <div class="mt-2">
                <label class="form-label" for="rPass">Password</label>
                <input id="rPass" type="password" class="form-control mw-100" style="border-radius: 10px" />
            </div>
            <div class="mt-2">
                <label class="form-label" for="rCPass">Confirm password</label>
                <input oninput="validate()" id="rCPass" type="password" name="password" class="form-control mw-100" style="border-radius: 10px" />
                <span id="passMsg" style="display: none">Passwords dont't match</span>
            </div>
            <div class="mt-3 text-center">
                <button type="submit" onclick="check()" class="btn btn-success w-75" style="border-radius: 10px">Register</button>
            </div>
        }
    </div>

</div>

<script>
    function check() {
        
    }
    
    function validate() {
        var pass = document.getElementById("rPass").value;
        var cpass = document.getElementById("rCPass").value;
        if (cpass == pass) {
            document.getElementById('passMsg').style.display = 'none';
        } else {
            document.getElementById('passMsg').style.display = 'block';
        }

    }
</script>

